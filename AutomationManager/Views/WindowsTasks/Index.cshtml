@model IEnumerable<AutomationManager.Models.WindowsTasks>

@{
    ViewData["Title"] = "Windows Task Scheduler";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="float-left">
                <h2>Windows Scheduled Tasks</h2>
            </div>
            <div class="float-right">
                <a asp-action="Create" class="btn btn-primary">Create New</a>
            </div>
        </div>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.TriggerType)*@
                Trigger Type
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.TriggerString)
            </th>*@
            <th>
                @*@Html.DisplayNameFor(model => model.TriggerAction)*@
                Action
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.DateCreated)*@
                Date Created
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.LastRun)*@
                Last Ran
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.CreatedByUser)*@
                Created By
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TriggerType)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.TriggerString)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.TriggerAction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastRun)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedByUser)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> | *@
                <a asp-action="Delete" asp-route-taskName="@item.Description">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
