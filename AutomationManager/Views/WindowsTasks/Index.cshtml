@model IEnumerable<AutomationManager.Models.WindowsTasks>

@{
    ViewData["Title"] = "Windows Task Scheduler";
    string x = "";
    bool z = true;
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="float-left">
                <h2>Windows Scheduled Tasks</h2>
            </div>
            <div class="float-right">
                <a asp-action="Create" class="btn btn-primary">Create New</a>
            </div>
        </div>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.TriggerType)*@
                Trigger Type
            </th>
            @*<th>
            @Html.DisplayNameFor(model => model.TriggerString)
        </th>*@
            <th>
                @*@Html.DisplayNameFor(model => model.TriggerAction)*@
                Action
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.DateCreated)*@
                Date Created
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.LastRun)*@
                Last Ran
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TriggerType)
            </td>
            @*<td>
            @Html.DisplayFor(modelItem => item.TriggerString)
        </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.TriggerAction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastRun)
            </td>
            <td>
                @if (item.Name.Length > 20)
                {
                    x = item.Name.Substring(0, 20);
                    z = true;
                }
                else
                {
                    x = item.Name;
                    z = false;
                }
                <a asp-action="Edit" asp-route-id="@x" asp-route-substring="@z">Edit</a>
                <a asp-action="Details" asp-route-id="@x" asp-route-substring="@z">Details</a>
                <a asp-action="Delete" asp-route-taskName="@item.Name">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
