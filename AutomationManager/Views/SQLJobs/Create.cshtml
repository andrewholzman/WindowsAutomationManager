@model AutomationManager.Models.CreateJobViewModel
@{
    ViewData["Title"] = "SQL Job - Create";
}


<h4>Create New SQL Agent Job</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateJob">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Server" class="control-label"></label>
                <input asp-for="Server" class="form-control" />
                <span asp-validation-for="Server" class="text-danger"></span>
            </div>
            <h4>Schedule</h4>
            <hr/>
            <div class="form-group">
                <label for="ScheduleName">Schedule Name</label>
                <input asp-for="ScheduleName" class="form-control" />
                <label for="Name">Run On</label>
                @*<select asp-for="SelectedDays" multiple="multiple" asp-items="Model.DaysOfWeek" id="days-of-week-select" class="custom-select"></select>*@
                <select asp-for="SelectedDays" id="selectedDays" multiple="multiple" class="form-control">
                    <option value="1">Sunday</option>
                    <option value="2">Monday</option>
                    <option value="4">Tuesday</option>
                    <option value="8">Wednesday</option>
                    <option value="16">Thursday</option>
                    <option value="32">Friday</option>
                    <option value="64">Saturday</option>
                </select>
                <label for="RunTime">Run Time</label>
                @*<input id="timepicker" class="form-control" />*@
                <input asp-for="RunTime" id="timepicker" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="StepName" class="control-label"></label>
                <input asp-for="StepName" class="form-control" />
                <label asp-for="Command" class="control-label"></label>
                <textarea asp-for="Command" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

<div>

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(function () {
            $('#timepicker').timepicker({
                timeFormat: 'h:mm',
                interval: 15,
                dynamic: false,
                dropdown: true,
                scrollbar: true
            });
        });

    </script>
}
